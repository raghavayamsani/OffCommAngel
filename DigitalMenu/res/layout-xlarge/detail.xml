<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="PLease Long press on an item to remove it from your Order \n Touch once on an Item to increase servings."
       android:layout_alignParentLeft = "true"
        android:textSize="16dp"
       
         />
      
       <TextView
        android:id="@+id/final_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price : "
        android:textColor="#D20000"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_toLeftOf="@+id/bill_amount"
         />
       
       <TextView
        android:id="@+id/bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" $$ "
         android:textColor="#D20000"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_alignParentTop = "true"
        android:layout_alignParentRight = "true"
         />
       
        <View 
	    android:id="@+id/id_line"
	    android:layout_width="wrap_content"
        android:background="@drawable/grad_line"
        android:layout_below="@+id/info"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"></View>
        
         <ListView
        android:id="@+id/listview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/id_line"
        android:layout_above="@+id/resultText"
        android:layout_marginBottom="10dp"
       >
    </ListView>
    
          <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"      
        android:layout_marginBottom="5dp"
         android:layout_above="@+id/buttonLayout"
         android:textColor="#D20000"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"      
         />
    <LinearLayout  android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
         android:layout_alignParentBottom = "true"
         
         android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"            
       	android:background="@drawable/butt"
       	android:textColor="@android:color/white"
        android:text="Back"
        android:shadowRadius="25"
        android:shadowColor="@android:color/white"
        android:shadowDx="1"
		android:shadowDy="1"
         />
    <!-- <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom = "true"
       
       	android:background="@drawable/butt"
       	android:textColor="@android:color/white"
        android:text="Menu"
        android:shadowRadius="25"
        android:shadowColor="@android:color/white"
        android:shadowDx="1"
		android:shadowDy="1"
         /> -->
      <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_marginLeft="50dp"
       	android:background="@drawable/butt"
       	android:textColor="@android:color/white"
        android:text="Order"
        android:shadowRadius="25"
        android:shadowColor="@android:color/white"
        android:shadowDx="1"
		android:shadowDy="1"
         />
      </LinearLayout>

   
	
   
  
    
</RelativeLayout>